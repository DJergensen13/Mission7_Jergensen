@model Mission06_Jergensen.Models.Movies

<h1>Add Movie to Collection</h1>

<form method="post">
    
    <input type="hidden" asp-for="MovieId" />

    <label asp-for="Title" for="title">Title:</label><br>
    <input asp-for="Title" type="text" id="title" name="title" required><br><br>

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.categories)
        {
        <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>
    <br />
    <label asp-for="Year" for="year">Year:</label><br>
    <input asp-for="Year" type="number" id="year" name="year" required><br><br>

    <label asp-for="Director" for="director">Director:</label><br>
    <input asp-for="Director" type="text" id="director" name="director" required><br><br>

    <label asp-for="Rating" for="rating">Rating:</label><br>
    <select asp-for="Rating" id="rating" name="rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br><br>

    <label asp-for="Edited" for="edited">Edited:</label><br>
    <select asp-for="Edited" id="edited" name="edited">
        <option value="True">Yes</option>
        <option value="False">No</option>
    </select><br><br>

    <label asp-for="LentTo" for="LentTo">Lent To:</label><br>
    <input asp-for="LentTo" type="text" id="LentTo" name="LentTo"><br><br>

    <label asp-for="CopiedToPlex" for="copiedtoplex">Copied To Plex:</label><br>
    <select asp-for="CopiedToPlex" id="copiedtoplex" name="copiedtoplex">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select><br><br>

    <label asp-for="Notes" for="notes">Notes (max 25 characters):</label><br>
    <input asp-for="Notes" type="text" id="notes" name="notes" maxlength="25"><br><br>

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>

</form>